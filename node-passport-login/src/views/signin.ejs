<%- layout('layouts/main.ejs') %>
<div class="row">
  <div class="col-md-4 offset-md-4">

    <div class="card mt-4">

      <div class="card-header">
        <h3>SignIn</h3>
      </div>

      <div class="card-body">

        <form action="/signin" method="post">
          <div class="form-group">
            <input type="email" name="email" value="" placeholder="Insert Email" class="form-control">
          </div>
          <div class="form-group">
            <input type="password" name="password" value="" placeholder="Insert Password" class="form-control">
          </div>

          <button type="submit" name="button" class="btn btn-primary btn-block mt-4">SignIn</button>
        </form>

      </div>
    </div>

  </div>
</div>
